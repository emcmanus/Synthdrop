<%= simple_form_for(@script, wrapper: :vertical_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, placeholder: "Title", label: false %>
    <%= f.input :description, placeholder: "Description", label: false %>
    <%= f.input :language, label: "Language: ", required: false do %>
      <%= f.select :language, [ "CoffeeScript", "JavaScript" ] %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
